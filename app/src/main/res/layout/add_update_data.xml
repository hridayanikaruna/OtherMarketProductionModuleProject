<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="610dp"
    android:background="#F9F9F9"
    android:paddingHorizontal="21dp"
    android:paddingBottom="11dp">

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="19sp"
        android:fontFamily="@font/poppins_black"
        android:text="Tambah Uraian"
        android:layout_margin="21dp"/>

    <Spinner
        android:id="@+id/kategoriSpinner"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:padding="10dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/edt_uraian"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:hint="Uraian"
        android:inputType="textCapWords"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_qty"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:hint="Quantity"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_satuan"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:hint="Satuan"
        android:layout_marginTop="10dp"
        android:inputType="textCapWords"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_total"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:hint="Total"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_catat"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:hint="Tanggal Catat"
        android:layout_marginTop="10dp"
        android:inputType="textCapWords"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_lunas"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsregular"
        android:hint="Tanggal Lunas"
        android:layout_marginTop="10dp"
        android:inputType="textCapWords"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinssemibold"
        android:text="Tambah"
        android:textColor="@color/white" />
</LinearLayout>