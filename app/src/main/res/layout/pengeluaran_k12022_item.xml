<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/main_container">
    <LinearLayout
        android:id="@+id/ll_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_uraian"
                android:text="Uraian"
                android:textSize="18sp"
                android:layout_margin="6dp"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:text="Qty"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="3"
                    android:text=":"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txt_qty"
                    android:text="Qty"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:text="Satuan"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="3"
                    android:text=":"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txt_satuan"
                    android:text="Satuan"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:text="Total"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="3"
                    android:text=":"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txt_total"
                    android:text="Total"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:text="Tanggal Catat"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="3"
                    android:text=":"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txt_catat"
                    android:text="Tgl Catat"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:text="Tanggal Lunas"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="3"
                    android:text=":"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txt_lunas"
                    android:text="Tgl Lunas"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:id="@+id/editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:backgroundTint="@color/primary_purple"/>
                <Button
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:backgroundTint="#AA4A44"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>